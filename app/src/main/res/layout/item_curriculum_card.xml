<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardCurriculum"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/border"
    app:cardBackgroundColor="@color/surface"
    app:rippleColor="@color/primary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Colored Accent Bar - Subtle -->
        <View
            android:id="@+id/statusIndicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@color/primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Difficulty Badge - Top Right -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipDifficulty"
            style="@style/Widget.Material3.Chip.Assist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            app:chipCornerRadius="8dp"
            app:chipMinHeight="28dp"
            app:chipBackgroundColor="@color/surface_variant"
            tools:text="Intermediate"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnMenu" />

        <!-- Menu Button -->
        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_more_vert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="More options"
            app:tint="@color/text_tertiary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:letterSpacing="-0.01"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            tools:text="Complete Android Development with Kotlin"
            app:layout_constraintTop_toBottomOf="@id/chipDifficulty"
            app:layout_constraintStart_toEndOf="@id/statusIndicator"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            tools:text="Master Android app development from basics to advanced concepts including MVVM, Room, Retrofit"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toEndOf="@id/statusIndicator"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Info Container with modern icons -->
        <LinearLayout
            android:id="@+id/infoContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/tvDescription"
            app:layout_constraintStart_toEndOf="@id/statusIndicator"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Lessons Count -->
            <ImageView
                android:layout_width="@dimen/icon_size_sm"
                android:layout_height="@dimen/icon_size_sm"
                android:src="@drawable/ic_book"
                android:contentDescription="Lessons"
                app:tint="@color/primary" />

            <TextView
                android:id="@+id/tvLessonCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xs"
                android:textSize="@dimen/text_size_body_sm"
                android:textColor="@color/text_secondary"
                android:textStyle="bold"
                tools:text="12 lessons" />

            <!-- Estimated Hours -->
            <ImageView
                android:layout_width="@dimen/icon_size_sm"
                android:layout_height="@dimen/icon_size_sm"
                android:layout_marginStart="@dimen/spacing_md"
                android:src="@drawable/ic_schedule"
                android:contentDescription="Duration"
                app:tint="@color/accent" />

            <TextView
                android:id="@+id/tvEstimatedHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xs"
                android:textSize="@dimen/text_size_body_sm"
                android:textColor="@color/text_secondary"
                android:textStyle="bold"
                tools:text="15h" />

        </LinearLayout>

        <!-- Progress Container -->
        <LinearLayout
            android:id="@+id/progressContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:layout_marginStart="@dimen/spacing_md"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/infoContainer"
            app:layout_constraintStart_toEndOf="@id/statusIndicator"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_xs">

                <!-- Progress Text -->
                <TextView
                    android:id="@+id/tvProgress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_body_sm"
                    android:textColor="@color/text_secondary"
                    tools:text="5 of 12 lessons" />

                <!-- Percentage -->
                <TextView
                    android:id="@+id/tvProgressPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_body_sm"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    tools:text="42%" />

            </LinearLayout>

            <!-- Modern Progress Bar -->
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                app:indicatorColor="@color/primary"
                app:trackColor="@color/surface_variant"
                app:trackCornerRadius="@dimen/corner_radius_sm"
                app:trackThickness="8dp"
                tools:progress="45" />

        </LinearLayout>

        <!-- Tags Container -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/tagsChipGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:layout_marginStart="@dimen/spacing_md"
            app:chipSpacingHorizontal="@dimen/spacing_xs"
            app:layout_constraintTop_toBottomOf="@id/progressContainer"
            app:layout_constraintStart_toEndOf="@id/statusIndicator"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Tags will be added dynamically -->

        </com.google.android.material.chip.ChipGroup>

        <!-- Generation Status (shown when generating) -->
        <LinearLayout
            android:id="@+id/generatingLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:layout_marginStart="@dimen/spacing_md"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:padding="@dimen/spacing_sm"
            android:background="@drawable/bg_search_bar"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/tagsChipGroup"
            app:layout_constraintStart_toEndOf="@id/statusIndicator"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="@dimen/icon_size_md"
                android:layout_height="@dimen/icon_size_md"
                android:indeterminate="true"
                app:indicatorSize="@dimen/icon_size_md"
                app:trackThickness="3dp"
                app:indicatorColor="@color/primary" />

            <TextView
                android:id="@+id/tvGeneratingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_sm"
                android:textSize="@dimen/text_size_body_sm"
                android:textStyle="bold"
                android:textColor="@color/primary"
                tools:text="Generating lessons..." />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
