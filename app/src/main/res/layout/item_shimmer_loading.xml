<?xml version="1.0" encoding="utf-8"?>
<!-- Shimmer Loading Item for Curriculum Card -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_lg"
    app:cardCornerRadius="@dimen/corner_radius_xl"
    app:cardElevation="@dimen/elevation_md"
    app:strokeWidth="1dp"
    app:strokeColor="@color/divider">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_lg">

        <!-- Title Shimmer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@drawable/shimmer_placeholder"
            android:layout_marginBottom="@dimen/spacing_sm" />

        <!-- Description Shimmer -->
        <View
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="16dp"
            android:background="@drawable/shimmer_placeholder"
            android:layout_marginBottom="@dimen/spacing_xs" />

        <View
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="16dp"
            android:background="@drawable/shimmer_placeholder"
            android:layout_marginBottom="@dimen/spacing_lg" />

        <!-- Progress Bar Shimmer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/shimmer_placeholder"
            android:layout_marginBottom="@dimen/spacing_sm" />

        <!-- Metadata Row Shimmer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="80dp"
                android:layout_height="12dp"
                android:background="@drawable/shimmer_placeholder"
                android:layout_marginEnd="@dimen/spacing_lg" />

            <View
                android:layout_width="60dp"
                android:layout_height="12dp"
                android:background="@drawable/shimmer_placeholder" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
