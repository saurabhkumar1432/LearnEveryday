<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        android:elevation="0dp"
        android:theme="@style/ThemeOverlay.Material3.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/surface"
            app:title="Lesson"
            app:titleTextColor="@color/text_primary" />
        
        <!-- Compact Progress Bar under toolbar -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:trackThickness="3dp"
            app:trackCornerRadius="0dp"
            app:indicatorColor="@color/primary"
            app:trackColor="@color/surface_variant"
            tools:progress="30" />
            
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/spacing_md"
                android:paddingEnd="@dimen/spacing_md"
                android:paddingTop="@dimen/spacing_md"
                android:paddingBottom="88dp">

                <!-- Compact Lesson Header -->
                <LinearLayout
                    android:id="@+id/headerContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/spacing_sm">

                    <!-- Lesson Number & Time Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_xs">

                        <TextView
                            android:id="@+id/chipLessonNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_body_sm"
                            android:textColor="@color/primary"
                            android:textStyle="bold"
                            tools:text="Lesson 3 of 12" />
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_sm"
                            android:text="â€¢"
                            android:textColor="@color/text_tertiary"
                            android:textSize="@dimen/text_size_body_sm" />

                        <!-- Estimated Time -->
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginStart="@dimen/spacing_sm"
                            android:src="@drawable/ic_schedule"
                            app:tint="@color/text_tertiary" />

                        <TextView
                            android:id="@+id/tvEstimatedTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:textSize="@dimen/text_size_body_sm"
                            android:textColor="@color/text_tertiary"
                            tools:text="15 min" />

                    </LinearLayout>

                    <!-- Lesson Title -->
                    <TextView
                        android:id="@+id/tvLessonTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_title_lg"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:lineSpacingExtra="2dp"
                        tools:text="Introduction to Kotlin Programming" />

                    <!-- Hidden Progress (for compatibility) -->
                    <TextView
                        android:id="@+id/tvProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        tools:text="45% complete" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/border"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <!-- Loading State -->
                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progressLoading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/spacing_xxl"
                    android:layout_marginBottom="@dimen/spacing_xxl"
                    android:visibility="gone"
                    app:indicatorSize="48dp"
                    app:trackThickness="4dp"
                    app:indicatorColor="@color/primary"
                    tools:visibility="visible" />

                <!-- Empty State - No Content Generated -->
                <LinearLayout
                    android:id="@+id/emptyStateContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="@dimen/spacing_xxl"
                    android:paddingBottom="@dimen/spacing_xxl"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_auto_stories"
                        app:tint="@color/text_tertiary"
                        android:layout_marginBottom="@dimen/spacing_md" />

                    <TextView
                        android:id="@+id/tvEmptyStateTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Content Not Generated"
                        android:textSize="@dimen/text_size_title_md"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/spacing_sm" />

                    <TextView
                        android:id="@+id/tvEmptyStateSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This lesson's content hasn't been generated yet."
                        android:textSize="@dimen/text_size_body_md"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/spacing_lg"
                        android:paddingHorizontal="@dimen/spacing_lg" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGenerateContent"
                        style="@style/Widget.App.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Generate Content"
                        app:icon="@drawable/ic_auto_stories"
                        app:iconGravity="start"
                        app:cornerRadius="@dimen/corner_radius_md" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipGeneratingStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:visibility="gone"
                        app:chipIcon="@drawable/ic_schedule"
                        tools:text="Generating..."
                        tools:visibility="visible" />

                </LinearLayout>

                <!-- Content Container -->
                <FrameLayout
                    android:id="@+id/contentCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="200dp">

                    <!-- RecyclerView for native block-based content rendering -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@android:layout/simple_list_item_1"
                        tools:itemCount="5" />

                    <!-- Fallback TextView for simple content -->
                    <TextView
                        android:id="@+id/tvContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_body_lg"
                        android:textColor="@color/text_primary"
                        android:lineSpacingExtra="6dp"
                        android:lineSpacingMultiplier="1.4"
                        android:fontFamily="sans-serif"
                        android:visibility="gone"
                        tools:text="Welcome to this comprehensive guide on Kotlin programming..." />

                </FrameLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </FrameLayout>

    <!-- Bottom Navigation Bar with Checkbox -->
    <LinearLayout
        android:id="@+id/bottomNavContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:paddingStart="@dimen/spacing_sm"
        android:paddingEnd="@dimen/spacing_sm"
        android:paddingTop="@dimen/spacing_sm"
        android:paddingBottom="@dimen/spacing_sm"
        android:background="@color/surface"
        android:elevation="@dimen/elevation_md"
        android:gravity="center_vertical">

        <!-- Previous Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrevious"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="Prev"
            android:textSize="13sp"
            app:icon="@drawable/ic_back"
            app:iconSize="18dp"
            app:cornerRadius="@dimen/corner_radius_md" />

        <!-- Mark Complete Button (styled as toggle) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMarkComplete"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginHorizontal="@dimen/spacing_xs"
            android:minWidth="56dp"
            android:text="Done"
            android:textSize="12sp"
            app:icon="@drawable/ic_check_circle"
            app:iconSize="20dp"
            app:cornerRadius="22dp"
            android:tooltipText="Mark lesson as complete"
            android:contentDescription="Mark lesson as complete" />

        <!-- Hidden checkbox to maintain state compatibility -->
        <CheckBox
            android:id="@+id/checkboxComplete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <!-- Next Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            style="@style/Widget.App.Button"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="Next"
            android:textSize="13sp"
            app:icon="@drawable/ic_arrow_forward"
            app:iconSize="18dp"
            app:iconGravity="end"
            app:cornerRadius="@dimen/corner_radius_md"
            android:backgroundTint="@color/primary" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>