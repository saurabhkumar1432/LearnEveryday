<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        android:elevation="@dimen/elevation_sm"
        android:theme="@style/ThemeOverlay.Material3.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/surface"
            app:title="Lesson"
            app:titleTextColor="@color/text_primary" />
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/spacing_lg"
                android:paddingEnd="@dimen/spacing_lg"
                android:paddingTop="@dimen/spacing_lg"
                android:paddingBottom="100dp">

                <!-- Lesson Header Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/corner_radius_xl"
                    app:cardElevation="@dimen/elevation_sm"
                    app:strokeWidth="0dp"
                    android:layout_marginBottom="@dimen/spacing_lg"
                    app:cardBackgroundColor="@color/surface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_lg">

                        <!-- Lesson Number Badge -->
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipLessonNumber"
                            style="@style/Widget.Material3.Chip.Assist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_md"
                            tools:text="Lesson 1 of 10"
                            app:chipIcon="@drawable/ic_book"
                            app:chipBackgroundColor="@color/primary"
                            android:textColor="@color/white" />

                        <!-- Lesson Title -->
                        <TextView
                            android:id="@+id/tvLessonTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_headline_md"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:lineSpacingExtra="4dp"
                            android:paddingBottom="@dimen/spacing_sm"
                            tools:text="Introduction to Kotlin Programming" />

                        <!-- Metadata Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <!-- Estimated Time -->
                            <ImageView
                                android:layout_width="@dimen/icon_size_sm"
                                android:layout_height="@dimen/icon_size_sm"
                                android:src="@drawable/ic_schedule"
                                app:tint="@color/accent" />

                            <TextView
                                android:id="@+id/tvEstimatedTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/spacing_xs"
                                android:textSize="@dimen/text_size_body_md"
                                android:textColor="@color/text_secondary"
                                tools:text="15 min read" />

                            <!-- Progress Indicator -->
                            <ImageView
                                android:layout_width="@dimen/icon_size_sm"
                                android:layout_height="@dimen/icon_size_sm"
                                android:layout_marginStart="@dimen/spacing_md"
                                android:src="@drawable/ic_progress"
                                app:tint="@color/success" />

                            <TextView
                                android:id="@+id/tvProgress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/spacing_xs"
                                android:textSize="@dimen/text_size_body_md"
                                android:textColor="@color/text_secondary"
                                tools:text="45% complete" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Loading State -->
                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progressLoading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/spacing_xxl"
                    android:layout_marginBottom="@dimen/spacing_xxl"
                    android:visibility="gone"
                    app:indicatorSize="48dp"
                    app:trackThickness="4dp"
                    app:indicatorColor="@color/primary"
                    tools:visibility="visible" />

                <!-- Content Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/contentCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/corner_radius_xl"
                    app:cardElevation="@dimen/elevation_none"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/card_stroke"
                    app:cardBackgroundColor="@color/surface">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="200dp">

                        <!-- WebView for rich markdown rendering (tables, code, diagrams) -->
                        <WebView
                            android:id="@+id/webViewContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/spacing_md"
                            android:visibility="visible"
                            android:background="@android:color/transparent"
                            tools:minHeight="400dp" />

                        <!-- Fallback TextView for simple content -->
                        <TextView
                            android:id="@+id/tvContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/spacing_lg"
                            android:textSize="@dimen/text_size_body_lg"
                            android:textColor="@color/text_primary"
                            android:lineSpacingExtra="8dp"
                            android:lineSpacingMultiplier="1.5"
                            android:fontFamily="sans-serif"
                            android:letterSpacing="0.01"
                            android:visibility="gone"
                            tools:text="Welcome to this comprehensive guide on Kotlin programming..." />

                    </FrameLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </FrameLayout>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardCornerRadius="@dimen/corner_radius_xl"
        app:cardElevation="@dimen/elevation_lg"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@color/surface"
        android:layout_margin="@dimen/spacing_md">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_md"
            android:gravity="center_vertical">

            <!-- Previous Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPrevious"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_sm"
                android:text="Previous"
                app:icon="@android:drawable/ic_media_previous"
                app:cornerRadius="@dimen/corner_radius_lg" />

            <!-- Mark Complete FAB -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabToggleComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_sm"
                android:layout_marginEnd="@dimen/spacing_sm"
                android:contentDescription="Mark complete"
                app:srcCompat="@drawable/ic_check_circle"
                app:backgroundTint="@color/success"
                app:tint="@color/white"
                app:fabSize="normal" />

            <!-- Next Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                style="@style/Widget.App.Button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_sm"
                android:text="Next"
                app:icon="@android:drawable/ic_media_next"
                app:iconGravity="end"
                app:cornerRadius="@dimen/corner_radius_lg"
                android:backgroundTint="@color/primary" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>