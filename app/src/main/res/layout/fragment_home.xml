<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:paddingTop="@dimen/spacing_sm_plus"
    android:background="@color/background"
    tools:context=".presentation.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_screen_horizontal"
        android:paddingEnd="@dimen/spacing_screen_horizontal"
        android:paddingBottom="@dimen/spacing_section_vertical">

        <LinearLayout
            android:id="@+id/emptyStateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_section_vertical"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                app:cardCornerRadius="@dimen/hero_card_corner_radius"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gradient_primary"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/hero_card_padding_horizontal"
                    android:paddingEnd="@dimen/hero_card_padding_horizontal"
                    android:paddingTop="@dimen/hero_card_padding_vertical"
                    android:paddingBottom="@dimen/hero_card_padding_vertical">

                    <ImageView
                        android:layout_width="@dimen/hero_icon_size"
                        android:layout_height="@dimen/hero_icon_size"
                        android:layout_marginBottom="@dimen/spacing_sm_plus"
                        android:alpha="0.85"
                        android:src="@drawable/ic_ai_brain"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        android:text="Unlock personal learning"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_title_lg"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Connect your AI provider to craft beautifully structured paths tailored to you."
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_body_md"
                        android:alpha="0.85"
                        android:lineSpacingExtra="4dp"
                        android:maxWidth="360dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/setupAIButton"
                        style="@style/Widget.App.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_lg"
                        android:backgroundTint="@color/white"
                        android:text="Set up AI"
                        android:textColor="@color/primary"
                        app:icon="@drawable/ic_settings"
                        app:iconPadding="@dimen/spacing_md"
                        app:iconTint="@color/primary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_section_vertical"
            android:clickable="false"
            android:focusable="false"
            app:cardCornerRadius="@dimen/hero_card_corner_radius"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gradient_primary"
                android:orientation="vertical"
                android:paddingStart="@dimen/hero_card_padding_horizontal"
                android:paddingEnd="@dimen/hero_card_padding_horizontal"
                android:paddingTop="@dimen/hero_card_padding_vertical"
                android:paddingBottom="@dimen/hero_card_padding_vertical">

                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    android:text="What would you love to master today?"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_title_lg"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:lineSpacingExtra="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_sm_plus"
                    android:text="Curated essentials, crafted the Apple way."
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_body_md"
                    android:alpha="0.85" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_xs">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/learningTab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Continue your path"
                        android:textColor="@color/primary"
                        app:chipBackgroundColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/searchSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_section_vertical"
            app:cardCornerRadius="22dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/surface"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/spacing_md"
                android:paddingEnd="@dimen/spacing_sm"
                android:paddingTop="@dimen/spacing_sm"
                android:paddingBottom="@dimen/spacing_sm">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_search"
                    android:contentDescription="Search"
                    app:tint="@color/text_tertiary" />

                <EditText
                    android:id="@+id/searchInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Search a skill or topic"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:minHeight="@dimen/button_height_sm"
                    android:padding="0dp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_tertiary"
                    android:textSize="@dimen/text_size_body_lg" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/searchButton"
                    style="@style/Widget.App.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height_sm"
                    android:minWidth="0dp"
                    android:paddingHorizontal="@dimen/spacing_md_plus"
                    android:text="Go"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_body_md"
                    android:backgroundTint="@color/primary"
                    app:cornerRadius="@dimen/corner_radius_xl"
                    app:iconPadding="0dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:text="Browse by focus"
            android:textAllCaps="false"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_body_md" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_section_vertical"
            android:overScrollMode="never"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/categoryChipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/spacing_xs"
                app:singleSelection="true"
                app:chipSpacingHorizontal="@dimen/chip_spacing_horizontal" />

        </HorizontalScrollView>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:text="Suggested today"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_title_md"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/suggestedTopicsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:layout_marginBottom="@dimen/spacing_section_vertical"
            android:nestedScrollingEnabled="false"
            tools:itemCount="6"
            tools:listitem="@layout/item_suggested_topic" />

        <TextView
            android:id="@+id/generatedTopicsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:text="Your crafted paths"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_title_md"
            android:textStyle="bold"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/generatedTopicsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            tools:itemCount="3"
            tools:listitem="@layout/item_generated_topic" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
