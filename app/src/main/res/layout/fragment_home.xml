<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:paddingTop="@dimen/spacing_sm_plus"
    android:background="@color/background"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context=".presentation.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_screen_horizontal"
        android:paddingEnd="@dimen/spacing_screen_horizontal"
        android:paddingBottom="@dimen/spacing_section_vertical">

        <LinearLayout
            android:id="@+id/emptyStateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_section_vertical"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                app:cardCornerRadius="@dimen/hero_card_corner_radius"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gradient_primary"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/hero_card_padding_horizontal"
                    android:paddingEnd="@dimen/hero_card_padding_horizontal"
                    android:paddingTop="@dimen/hero_card_padding_vertical"
                    android:paddingBottom="@dimen/hero_card_padding_vertical">

                    <ImageView
                        android:layout_width="@dimen/hero_icon_size"
                        android:layout_height="@dimen/hero_icon_size"
                        android:layout_marginBottom="@dimen/spacing_sm_plus"
                        android:alpha="0.85"
                        android:src="@drawable/ic_ai_brain"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        android:text="Unlock personal learning"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_title_lg"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Connect your AI provider to craft beautifully structured paths tailored to you."
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_body_md"
                        android:alpha="0.85"
                        android:lineSpacingExtra="4dp"
                        android:maxWidth="360dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/setupAIButton"
                        style="@style/Widget.App.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_lg"
                        android:backgroundTint="@color/white"
                        android:text="Set up AI"
                        android:textColor="@color/primary"
                        app:icon="@drawable/ic_settings"
                        app:iconPadding="@dimen/spacing_md"
                        app:iconTint="@color/primary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_section_vertical"
            android:clickable="false"
            android:focusable="false"
            app:cardCornerRadius="@dimen/hero_card_corner_radius"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gradient_primary"
                android:orientation="vertical"
                android:paddingStart="@dimen/hero_card_padding_horizontal"
                android:paddingEnd="@dimen/hero_card_padding_horizontal"
                android:paddingTop="@dimen/hero_card_padding_vertical"
                android:paddingBottom="@dimen/hero_card_padding_vertical">

                <!-- Greeting Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_sm">

                    <TextView
                        android:id="@+id/greetingText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Good morning ðŸ‘‹"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_body_lg"
                        android:alpha="0.9" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_ai_brain"
                        android:alpha="0.85"
                        app:tint="@color/white" />

                </LinearLayout>

                <!-- Main Title -->
                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_md_plus"
                    android:text="What will you learn today?"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_title_xl"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:lineSpacingExtra="2dp" />

                <!-- Search Bar integrated in header -->
                <LinearLayout
                    android:id="@+id/searchSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_search_bar"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/spacing_md"
                    android:paddingEnd="@dimen/spacing_sm"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_search"
                        android:contentDescription="@null"
                        android:importantForAccessibility="no"
                        app:tint="@color/search_bar_icon" />

                    <EditText
                        android:id="@+id/searchInput"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Search any topic or skill..."
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/search_bar_text"
                        android:textColorHint="@color/search_bar_hint"
                        android:textCursorDrawable="@drawable/cursor_primary"
                        android:textSize="15sp"
                        android:gravity="center_vertical"
                        android:privateImeOptions="nm" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/searchButton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:minWidth="72dp"
                        android:minHeight="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="0dp"
                        android:text="Search"
                        android:textAllCaps="false"
                        android:textColor="@color/search_button_text"
                        android:textSize="14sp"
                        app:backgroundTint="@color/search_button_bg"
                        app:cornerRadius="10dp"
                        app:elevation="0dp"
                        app:rippleColor="@color/primary_light" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:text="Browse by category"
            android:textAllCaps="false"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_body_md" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_section_vertical"
            android:overScrollMode="never"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/categoryChipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/spacing_xs"
                app:singleSelection="true"
                app:chipSpacingHorizontal="@dimen/chip_spacing_horizontal" />

        </HorizontalScrollView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Suggested today"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_title_md"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/refreshTopicsButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Refresh topics"
                android:padding="6dp"
                android:src="@drawable/ic_refresh"
                app:tint="@color/primary" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/suggestedTopicsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:layout_marginBottom="@dimen/spacing_section_vertical"
            android:nestedScrollingEnabled="false"
            tools:itemCount="6"
            tools:listitem="@layout/item_suggested_topic" />

        <TextView
            android:id="@+id/generatedTopicsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:text="Your crafted paths"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_title_md"
            android:textStyle="bold"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/generatedTopicsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            tools:itemCount="3"
            tools:listitem="@layout/item_generated_topic" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
