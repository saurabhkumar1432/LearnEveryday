<?xml version="1.0" encoding="utf-8"?>
<!-- Learning Plans Activity - Dedicated screen for all learning paths -->
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/surface">

            <!-- Hero Section with Gradient -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/learning_plan_hero_height"
                android:background="@drawable/bg_gradient_primary"
                android:paddingStart="@dimen/spacing_lg"
                android:paddingEnd="@dimen/spacing_lg"
                android:paddingTop="@dimen/spacing_lg"
                android:paddingBottom="@dimen/spacing_lg"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:id="@+id/iconLearning"
                    android:layout_width="@dimen/hero_icon_size"
                    android:layout_height="@dimen/hero_icon_size"
                    android:src="@drawable/ic_curriculum"
                    app:tint="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tvTitle" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Learning Plans"
                    android:textSize="@dimen/text_size_title_lg"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toTopOf="@id/tvSubtitle"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="@dimen/spacing_xs" />

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Master any skill, one step at a time"
                    android:textSize="@dimen/text_size_body_lg"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Toolbar -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/ic_back"
                app:navigationIconTint="@color/white"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <!-- Filter and Sort Bar -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:layout_marginEnd="@dimen/spacing_md"
            android:layout_marginTop="@dimen/spacing_sm_plus"
            android:layout_marginBottom="@dimen/spacing_sm_plus"
            app:cardCornerRadius="@dimen/corner_radius_lg"
            app:cardElevation="@dimen/elevation_sm"
            app:strokeWidth="1dp"
            app:strokeColor="@color/divider">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_sm_plus"
                android:gravity="center_vertical">

                <!-- Filter Chip -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFilter"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    app:chipIcon="@drawable/ic_filter"
                    app:chipCornerRadius="@dimen/corner_radius_md" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- View Toggle -->
                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/viewToggleGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:checkedButton="@id/btnGridView">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGridView"
                        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                        android:layout_width="@dimen/toggle_button_size"
                        android:layout_height="@dimen/toggle_button_size"
                        app:icon="@drawable/ic_grid"
                        app:iconTint="@color/text_secondary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnListView"
                        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                        android:layout_width="@dimen/toggle_button_size"
                        android:layout_height="@dimen/toggle_button_size"
                        app:icon="@drawable/ic_list"
                        app:iconTint="@color/text_secondary" />

                </com.google.android.material.button.MaterialButtonToggleGroup>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content Area -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_md">

            <!-- Stats Cards Column -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/spacing_md"
                android:layout_marginBottom="@dimen/spacing_lg">

                <!-- Total Plans Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_sm_plus"
                    app:cardCornerRadius="@dimen/corner_radius_lg"
                    app:cardElevation="@dimen/elevation_sm"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/divider">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/learning_stat_card_padding"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvTotalPlans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="@dimen/learning_stat_value_text_size"
                            android:textStyle="bold"
                            android:textColor="@color/primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Plans"
                            android:textSize="@dimen/text_size_caption"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="@dimen/spacing_xs" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- In Progress Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_sm_plus"
                    app:cardCornerRadius="@dimen/corner_radius_lg"
                    app:cardElevation="@dimen/elevation_sm"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/divider">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/learning_stat_card_padding"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvInProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="@dimen/learning_stat_value_text_size"
                            android:textStyle="bold"
                            android:textColor="@color/info" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="In Progress"
                            android:textSize="@dimen/text_size_caption"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="@dimen/spacing_xs" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Completed Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/corner_radius_lg"
                    app:cardElevation="@dimen/elevation_sm"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/divider">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/learning_stat_card_padding"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvCompleted"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="@dimen/learning_stat_value_text_size"
                            android:textStyle="bold"
                            android:textColor="@color/success" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Completed"
                            android:textSize="@dimen/text_size_caption"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="@dimen/spacing_xs" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Learning Plans List/Grid -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/learningPlansRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="@dimen/spacing_lg"
                tools:listitem="@layout/item_learning_plan" />

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/emptyStateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/spacing_lg"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/icon_size_xxl"
                    android:layout_height="@dimen/icon_size_xxl"
                    android:src="@drawable/ic_book"
                    android:alpha="0.3"
                    app:tint="@color/text_tertiary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Learning Plans Yet"
                    android:textSize="@dimen/text_size_title_lg"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="@dimen/spacing_md" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start your learning journey by creating\nyour first personalized plan"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_body_md"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:layout_marginBottom="@dimen/spacing_lg" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCreatePlan"
                    style="@style/Widget.App.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height_sm"
                    android:text="Create Learning Plan"
                    android:paddingStart="@dimen/spacing_md_plus"
                    android:paddingEnd="@dimen/spacing_md_plus"
                    app:icon="@drawable/ic_create_plan" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- FAB for Creating New Plan - Centered for better UX -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabCreatePlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/spacing_lg"
        android:text="Create Plan"
        app:icon="@drawable/ic_create_plan"
        app:backgroundTint="@color/primary"
        app:iconTint="@color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
