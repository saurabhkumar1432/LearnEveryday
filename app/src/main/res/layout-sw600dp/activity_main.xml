<?xml version="1.0" encoding="utf-8"?>
<!-- Tablet Layout for Main Activity (sw600dp) -->
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Widget.App.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:title="@string/app_name"
            app:titleTextColor="@color/text_primary"
            app:titleTextAppearance="@style/TextAppearance.App.Headline2"
            app:menu="@menu/main_menu" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Two-pane Layout for Tablets -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Left Pane: Search and Categories -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:fillViewport="true"
            android:paddingStart="@dimen/spacing_xl"
            android:paddingEnd="@dimen/spacing_lg"
            android:background="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/spacing_sm"
                android:paddingBottom="@dimen/spacing_xl">

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/emptyStateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/spacing_xl"
                    android:visibility="gone">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/corner_radius_xl"
                        app:cardElevation="@dimen/elevation_md"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_xl"
                            android:gravity="center"
                            android:background="@drawable/bg_gradient_primary">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/ic_ai_brain"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AI-Powered Learning"
                                android:textSize="@dimen/text_size_headline_lg"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="@dimen/spacing_md" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Generate personalized learning paths"
                                android:textAlignment="center"
                                android:textSize="@dimen/text_size_body_lg"
                                android:textColor="@color/white"
                                android:alpha="0.9"
                                android:layout_marginTop="@dimen/spacing_sm" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/setupAIButton"
                        style="@style/Widget.App.Button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:text="Setup AI Provider"
                        android:layout_marginTop="@dimen/spacing_lg"
                        app:icon="@drawable/ic_ai_brain" />

                </LinearLayout>

                <!-- Welcome Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What would you like to\nlearn today?"
                    android:textSize="@dimen/text_size_headline_lg"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:layout_marginBottom="@dimen/spacing_lg" />

                <!-- Search Bar -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/searchSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/corner_radius_lg"
                    app:cardElevation="@dimen/elevation_md"
                    android:layout_marginBottom="@dimen/spacing_lg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="@dimen/spacing_sm">

                        <ImageView
                            android:layout_width="@dimen/icon_size_md"
                            android:layout_height="@dimen/icon_size_md"
                            android:src="@android:drawable/ic_menu_search"
                            app:tint="@color/text_tertiary" />

                        <EditText
                            android:id="@+id/searchInput"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Search topics..."
                            android:textSize="@dimen/text_size_title_sm"
                            android:paddingStart="@dimen/spacing_md"
                            android:paddingEnd="@dimen/spacing_md"
                            android:background="@android:color/transparent"
                            android:minHeight="56dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/searchButton"
                            style="@style/Widget.App.Button"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:minWidth="0dp"
                            android:padding="0dp"
                            android:text=""
                            android:textAllCaps="false"
                            android:contentDescription="Search"
                            app:backgroundTint="@color/primary"
                            app:cornerRadius="28dp"
                            app:icon="@drawable/ic_ai_brain"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:iconTint="@color/white" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Category Chips -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginBottom="@dimen/spacing_lg">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/categoryChipGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:chipSpacingHorizontal="@dimen/spacing_sm" />

                </HorizontalScrollView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <!-- Right Pane: Topics Grid -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:paddingStart="@dimen/spacing_lg"
            android:paddingEnd="@dimen/spacing_xl"
            android:background="@color/background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/spacing_sm">

                <!-- Suggested Topics -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suggested Topics"
                    android:textSize="@dimen/text_size_title_lg"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/suggestedTopicsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginBottom="@dimen/spacing_xl"
                    tools:listitem="@layout/item_suggested_topic" />

                <!-- Learning Paths -->
                <TextView
                    android:id="@+id/generatedTopicsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Learning Paths"
                    android:textSize="@dimen/text_size_title_lg"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_md"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/generatedTopicsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_generated_topic" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <!-- FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/createCustomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/spacing_xl"
        app:srcCompat="@drawable/ic_add"
        app:backgroundTint="@color/primary"
        app:tint="@color/white"
        app:fabSize="normal" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
